[workspace.package]
version = "1.0.0"
edition = "2021"

[workspace]
members = [ "crates/lsp","crates/parser"]
default-members = ["crates/lsp"]
resolver = "2"

[workspace.dependencies]
serde = "1.0.210"
url = "2.5.2"
reqwest = "0.12.8"
tokio = "1.40.0"
toml = "0.8.19"
proctitle = "0.1.1"
glob = "0.3.1"
serde_json = "1.0.128"
trie-rs = "0.4.2"
urlencoding = "2.1.3"
taplo = { git = "https://github.com/frederik-uni/taplo" }
tcp-struct = { git = "https://github.com/frederik-uni/tcp-struct" }
parser = { path = "./crates/parser" }
util = { path = "./crates/util" }
crate_info = { path = "./crates/crate_info" }
